<style>
  /* Custom CSS for the container */
  .center-container {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    padding: 20px;
    background-image: url('/assets/home/backback.jpg'); /* Replace with the actual path to your background image */
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  /* Optional: Style the "New store" heading */
  h1 {
    font-size: 30px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  /* Optional: Style the link section */
  .link-section {
    margin-top: 20px;
  }
</style>

<div class="center-container">
  <h1>New store</h1>

  <%= render "form", store: @store %>

  <div class="link-section">
    <%= link_to "Back to stores", stores_path %>
  </div>
</div>
