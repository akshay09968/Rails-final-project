<div id="<%= dom_id line_item %>">
  <p>
    <strong>Cart:</strong>
    <%= line_item.cart_id %>
  </p>

  <p>
    <strong>Store:</strong>
    <%= line_item.store_id %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= line_item.quantity %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency(line_item.total_price.to_i) %>
  </p>


</div>

